<style>    
  .form-container {
    margin-inline: auto;
    max-width: 320px;
    padding-inline: 2rem;
    padding-block: 2rem;
    
  }
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    & label {
      font-size: 0.8rem;
      color: var(--dark-gray);
      display: flex;
      flex-direction: column;      
      gap: 0.2rem;      
    }
    & input, textarea {
      font-family: 'IBM Plex Sans';
      border: none;
      border-radius: 8px;
      background-color: var(--light-gray);
      padding-inline: 0.5rem ;
      padding-block: 0.6rem ;
    }

    & button {
      padding-inline: 0.5rem;
      padding-block: 0.6rem;
      border: none;
      color: var(--white);
      border-radius: 8px;
      background-color: var(--blue);
      
    }
  }
</style>
<section class="form-container">
  <h2 id="contact">Contact</h2>
  <form action="https://formspree.io/f/xrgoondr" method="POST" class="contact-form">
    <label>
      E-mail
      <input type="email" name="email" required />
    </label>
    <label>
      Message
      <textarea name="message" rows="5"></textarea>
    </label>
    <button type="submit">Send</button>
  </form>
</section>
